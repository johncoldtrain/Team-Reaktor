<%= page_header do %>
<h1>Listing albums</h1>
<% end %>


<div class="row">
    <% @albums.each do |album| %>
     <div class="col-md-4">
        <%= link_to album_thumbnail(album), album_pictures_path(@user, album), class: "thumbnail" %>
        <% if album.title? %><h4><%= album.title %></h4><% end %>
        <% if can_edit_album?(album) %>
        	<%= link_to "Edit", edit_album_path(album) %>
        	| <%= link_to "Delete", album_path(album), method: :delete, data: { confirm: "Are you sure?" } %>
        <% end %>
  	</div>
    <% end %>
</div>
<br>
<% if signed_in? && current_user == @user %>
    <%= link_to 'New Album', new_album_path, class: 'btn btn-primary' %>
<% end %>
